<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragOrdemExibicaoCor"
    android:id="@+id/frag_ordem_exibicao">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblOrdemExibição"
                android:id="@+id/textView3"
                android:layout_gravity="left" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="2"
                android:id="@+id/edtOrdemExibicao"
                android:hint="1"
                android:maxLength="2"
                android:inputType="number"

                android:maxLines="1"
                android:imeOptions="actionDone"
                android:textAlignment="center" />


        </LinearLayout>

       <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/caixa_cor"
            android:gravity="left">



            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCor"
                android:layout_gravity="left" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/spnCor" />

        </LinearLayout>



    </LinearLayout>
</FrameLayout>
