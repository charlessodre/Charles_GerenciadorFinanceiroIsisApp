<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="1dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp">

        <TextView
            android:text="01/01/2000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDataTransferenciaIItem"
            android:textStyle="normal|bold"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="3dp"
            android:paddingRight="2dp">

            <ImageView
                android:id="@+id/imgTransfItemCir"
                android:src="@drawable/circle"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imgTrasnfItem"
                android:src="@drawable/ic_import_export_black_24dp"
                android:baselineAlignBottom="false"
                android:layoutDirection="inherit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="6dp"
                android:layout_alignParentLeft="false"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtlblContaOrigemItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblOrigem"
                        android:textAppearance="?android:attr/textAppearanceSmall"


                        />

                    <TextView
                        android:id="@+id/txtContaOrigemItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="txtContaOrigemItem"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/corPendencia" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtlblContaDestinoItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lblDestino"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/txtContaDestinoItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="txtContaDestinoItem"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/corResolvido" />

                </LinearLayout>



            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtValorTransferenciaItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="123,25"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />


        </LinearLayout>

</LinearLayout>
</LinearLayout>