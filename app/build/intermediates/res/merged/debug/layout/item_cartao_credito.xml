<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingTop="10dp"
    android:paddingRight="1dp"
    android:paddingLeft="8dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="3dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imgCartaoItemCir"
            android:src="@drawable/circle"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/imgCartaoItem"
            android:src="@drawable/ic_account_balance_black_24dp"
            android:baselineAlignBottom="false"
            android:layoutDirection="inherit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
          />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="txtNomeCartao"
            android:id="@+id/txtNomeCartaoItem"
            android:textStyle="normal|bold"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblSaldoAtual"
            android:id="@+id/txtSaldoAtualDescItem"

            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/lblPrevisto"
            android:id="@+id/txtSaldoPrevistoDataItem"

            android:textStyle="normal|italic"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1234"
            android:id="@+id/txtSaldoAtualItem"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5698"
            android:id="@+id/txtSaldoPrevistoValorItem"
            android:gravity="right"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</LinearLayout>