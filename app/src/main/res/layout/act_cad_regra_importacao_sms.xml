<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_cad_conta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".actCadastros.actCadRegraImportacaoSMS">

    <ScrollView
        android:id="@+id/createdrill_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblNomeRegra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblNomeRegra" />

                <EditText
                    android:id="@+id/edtNomeRegraImpSMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:ems="10"
                    android:hint="@string/lblNomeRegra"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblNumeroSMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblNumeroSMS" />

                <EditText
                    android:id="@+id/edtNumeroSMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:ems="10"
                    android:hint="@string/lblNumeroSMS"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblTexto1NoSMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblTextoNoSMS" />


                <EditText
                    android:id="@+id/edtTexto1NoSMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:ems="10"
                    android:hint="@string/lblTextoNoSMS"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_obj_cadastro" />

                <LinearLayout
                    android:id="@+id/lnlDetalhesRegra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtExibeDetalhes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblMaisDetalhes"
                        android:textColor="@color/indigo_A700" />

                    <ImageView
                        android:id="@+id/imgExibeDetalhes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_18dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlDetalhesConteudoRegra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lnlDetalhesRegra"
                    android:orientation="vertical"
                    android:visibility="gone">

                                       <TextView
                        android:id="@+id/lblTexto2NoSMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblTextoNoSMS" />

                    <EditText
                        android:id="@+id/edtTexto2NoSMS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elegantTextHeight="true"
                        android:ems="10"
                        android:hint="@string/lblTextoNoSMS"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblValorNomeNoSMS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lblValorEntreTextos" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edtTextoValorNoSMS1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elegantTextHeight="true"
                                android:ems="10"
                                android:hint="@string/lblTexto1"
                                android:imeOptions="actionDone"
                                android:inputType="textCapSentences"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_weight="1"/>


                            <EditText
                                android:id="@+id/edtTextoValorNoSMS2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elegantTextHeight="true"
                                android:ems="10"
                                android:hint="@string/lblTexto2"
                                android:imeOptions="actionDone"
                                android:inputType="textCapSentences"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblDataNomeNoSMS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lblDataEntreTextos" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edtTextoDataNoSMS1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elegantTextHeight="true"
                                android:ems="10"
                                android:hint="@string/lblTexto1"
                                android:imeOptions="actionDone"
                                android:inputType="textCapSentences"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_weight="1"/>


                            <EditText
                                android:id="@+id/edtTextoDataNoSMS2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elegantTextHeight="true"
                                android:ems="10"
                                android:hint="@string/lblTexto2"
                                android:imeOptions="actionDone"
                                android:inputType="textCapSentences"
                                android:maxLength="30"
                                android:maxLines="1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_obj_cadastro" />

            <LinearLayout
                android:id="@+id/linearLayout31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_obj_cadastro" />

                    <TextView
                        android:id="@+id/lblTipoTransacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblTipoTransacao" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_obj_cadastro" />

                    <Spinner
                        android:id="@+id/spnTipoTransacao"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_obj_cadastro" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_obj_cadastro" />

                    <CheckBox
                        android:id="@+id/cbxStatus"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:checked="true"
                        android:nestedScrollingEnabled="false"
                        android:text="@string/lblHabilitada" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_obj_cadastro" />
            <LinearLayout
                android:id="@+id/lnlDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lblDescDespesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDescricaoDespesa" />

                <EditText
                    android:id="@+id/edtTextoDescDespesa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:ems="10"
                    android:hint="@string/lblDescricaoDespesa"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblCategoriaDespesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblCategoriaDespesa" />

                <Spinner
                    android:id="@+id/spnCategoriaDespesa"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:dropDownWidth="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_obj_cadastro" />

                <TextView
                    android:id="@+id/lblSubCategoriaDespesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblSubCategoria" />

                <Spinner
                    android:id="@+id/spnSubCategoriaDespesa"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:dropDownWidth="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lblDescReceita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblDescricaoReceita" />

                <EditText
                    android:id="@+id/edtTextoDescReceita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:ems="10"
                    android:hint="@string/lblDescricaoReceita"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblCategoriaReceital1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblCategoriaReceita" />


                <Spinner
                    android:id="@+id/spnCategoriaReceita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblContaOrigem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblContaOrigem" />


                <Spinner
                    android:id="@+id/spnContaOrigem"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:dropDownWidth="match_parent"
                    android:gravity="center_vertical|start"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlTransferencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lblContaDestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblContaDestino" />

                <Spinner
                    android:id="@+id/spnContaDestino"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:dropDownWidth="match_parent"
                    android:gravity="center_vertical|start"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_obj_cadastro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <CheckBox
                    android:id="@+id/cbxEfetivaAutomaticamente"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:nestedScrollingEnabled="false"
                    android:text="@string/lblEfetivarAutomaticamente" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <CheckBox
                    android:id="@+id/cbxNotificarLancamento"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:nestedScrollingEnabled="false"
                    android:text="@string/lblNotificarLancamento" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
