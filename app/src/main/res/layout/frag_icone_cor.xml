<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.charlessodre.apps.gerenciadorfinanceiroisis.fragmentos.frgIconeCor"
    android:id="@+id/frag_icone_cor">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/lblIcone" />


            <Spinner
                android:id="@+id/spnIcone"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"

                android:gravity="center" />

        </LinearLayout>

       <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/caixa_cor"
            android:gravity="left">

           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:text="@string/lblCor" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/spnCor" />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>
